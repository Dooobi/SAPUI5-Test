<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<ViewSettingsDialog id="filterDialog" confirm="onFilterDialogConfirm" resetFilters="onResetFilters">
		<filterItems>
			<ViewSettingsFilterItem key="Trainee" text="{i18n>filterName1}"
				items="{ path: '/Persons', filters: [ {path: 'IsTrainee', operator: 'EQ', value1: true} ], sorter: [{ path: 'Firstname' }, { path: 'Lastname' }] }">
				<items>
					<ViewSettingsItem key="{PerId}" text="{Firstname} {Lastname}"/>
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem key="Generation" text="{i18n>filterName2}" items="{/Generations}">
				<items>
					<ViewSettingsItem key="{GenerationId}" text="{Text}"/>
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem key="Profession" text="{i18n>filterName3}" items="{path: '/Professions', sorter: [{path: 'Text'}] }">
				<items>
					<ViewSettingsItem key="{ProfId}" text="{Text}"/>
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem key="Subject" text="{i18n>filterName4}" items="{path: '/Subjects', sorter: [{path: 'Text'}] }">
				<items>
					<ViewSettingsItem key="{SubjectId}" text="{Text}"/>
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem id="filterItemTrainingYear" key="TrainingYear" text="{i18n>filterName5}">
				<items>
					<ViewSettingsItem key="0" text="{i18n>currentTrainingYear}"/>
					<!-- generated in JavaScript -->
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>