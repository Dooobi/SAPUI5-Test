<mvc:View controllerName="my.namespace.controller.Main" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic" xmlns:viz="sap.viz.ui5.controls" xmlns:table="sap.ui.table" xmlns:custom="my.namespace.customcontrol"
	xmlns:u="sap.ui.unified">
	<semantic:FullscreenPage id="page" title="{i18n>mainTitle}" height="100%" enableScrolling="false">
		<semantic:content>
			<Table showNoData='false'>
            <columns>
                <Column>
                    <header>
                        <Text text='ReportId' />
                    </header>
                </Column>
                <Column>
                    <header>
                        <Text text='WeekStart' />
                    </header>
                </Column>
                <Column>
                    <header>
                        <Text text='WeekEnd'  />
                    </header>
                </Column>
            </columns>
        </Table>
        <ScrollContainer height='20rem' vertical='true'> <!-- To have fixed with and enable vertical scrolling of data table -->
        <!-- Table to hold data, data ,data -->
            <Table class='tableHdr' items='{/ReportIds}' inset="true"> <!--  CSS class to hide the column header, otherwise we will have 2 headers. -->
                <columns>
                <!-- Dont need columns header, as upper table has already defined them. -->
                    <Column >
                    </Column>
                    <Column >
                    </Column>
                    <Column >
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text='{ReportId}' />
                            <Text text='{WeekStart}' />
                            <Text text='{WeekEnd}' />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </ScrollContainer>
		</semantic:content>
	</semantic:FullscreenPage>
</mvc:View>