					<IconTabFilter icon="sap-icon://it-system" text="Technisch" count="10/30">
						<content>
							<form:SimpleForm>
								<core:Title text="System"/>
								<Label text="Wollen Sie mehrere SAP-Systeme in ein S/4HANA-System 체berf체hren?" class="sapUiTinyMarginBottom"/>
								<SegmentedButton selectedKey="dummy">
									<items>
										<SegmentedButtonItem text="Ja" key="yes"/>
										<SegmentedButtonItem visible="false" key="dummy"/>
										<SegmentedButtonItem text="Nein" key="no"/>
									</items>
								</SegmentedButton>
								<!--<RadioButtonGroup>-->
								<!--	<RadioButton text="Ja"/>-->
								<!--	<RadioButton text="Nein"/>-->
								<!--</RadioButtonGroup>-->
								<Label required="true" text="Kann ein SAP-System als Template-System genutzt werden?" class="sapUiTinyMarginBottom"/>
								<SegmentedButton selectedKey="dummy">
									<items>
										<SegmentedButtonItem text="Ja" key="yes"/>
										<SegmentedButtonItem visible="false" key="dummy"/>
										<SegmentedButtonItem text="Nein" key="no"/>
									</items>
								</SegmentedButton>
								<Label text="W체nschen Sie ein RollOut Szenario?" class="sapUiTinyMarginBottom"/>
								<SegmentedButton selectedKey="dummy">
									<items>
										<SegmentedButtonItem text="Ja" key="yes"/>
										<SegmentedButtonItem visible="false" key="dummy"/>
										<SegmentedButtonItem text="Nein" key="no"/>
									</items>
								</SegmentedButton>
								<Label text="Welche externen SAP Produkte sind im Einsatz?" class="sapUiTinyMarginBottom"/>
								<MultiComboBox>
									<core:Item text="EWM" key="EWM"/>
									<core:Item text="CRM" key="CRM"/>
									<core:Item text="Keine" key="none"/>
								</MultiComboBox>
								<CheckBox text="Keine" textAlign="Left"/>
								<Label text="Verwenden Sie neben SAP ERP ECC weitere integrierte Third-Party-Produkte?"/>
								<Input />
								<Label text="z.B.: VISTEX, FIS/wws, FIS/edc, ..."/>
								<SegmentedButton selectedKey="dummy">
									<items>
										<SegmentedButtonItem text="Ja" key="yes"/>
										<SegmentedButtonItem visible="false" key="dummy"/>
										<SegmentedButtonItem text="Nein" key="no"/>
									</items>
								</SegmentedButton>
								<core:Title text="Coding"/>
								<Label text="Anzahl der Kundenobjekte?"/>
								<Input valueState="Warning"/>
							</form:SimpleForm>
						</content>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://suitcase" text="Gesch채ftlich" count="0/10"/>
					<IconTabSeparator icon="sap-icon://process"/>
					<IconTabFilter icon="sap-icon://approvals" text="Ergebnis" enabled="false"/>
				</items>
			</IconTabBar>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="Submit"/>
			</Toolbar>
		</footer>
