<mvc:View controllerName="my.namespace.controller.Main" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic" xmlns:viz="sap.viz.ui5.controls" xmlns:table="sap.ui.table" xmlns:form="sap.ui.layout.form" xmlns:custom="my.namespace.customcontrol">
	<Page id="page" title="{i18n>mainTitle}" height="100%" enableScrolling="false">
		<subHeader>
		</subHeader>
		<content>
			<HBox height="50%">
				<VBox alignItems="Center">
