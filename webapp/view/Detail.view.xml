<mvc:View controllerName="my.namespace.controller.Detail" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic">
	<semantic:DetailPage id="detail" title="{i18n>mainTitle}" height="100%" enableScrolling="false">
		<semantic:content>
			<ScrollContainer id="scroll" vertical="true" width="100%" height="100%" horizontal="false">
				<Panel id="panel">
					<Table id="table" items="{data>/Items}">
						<headerToolbar>
							<Toolbar>
								<ToolbarSpacer/>
								<Button icon="sap-icon://add" press="onAddPress"/>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column width="10em">
								<Text text="Titel"/>
							</Column>
							<Column width="10em">
								<Text text="Beschreibung"/>
							</Column>
						</columns>
						<ColumnListItem>
							<cells>
								<Title text="{path: 'data>Title', formatter: 'my.namespace.controller.Detail.prototype.formatter.formatTest'}"/>
								<Text text="haha"/>
							</cells>
						</ColumnListItem>
					</Table>
				</Panel>
			</ScrollContainer>
		</semantic:content>
	</semantic:DetailPage>
</mvc:View>